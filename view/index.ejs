<%-include('partials/header');-%>
<div class="container">
  <div class="hero">
    <img
      class="hero-image"
      src="/images/watch-instagram-story.webp"
      alt="Instagram Story Viewer"
    />
    <div class="hero-container">
      <h1 class="title">IG Story Viewer</h1>
      <div class="title-desc">
        <p>
          WATCH
          <span
